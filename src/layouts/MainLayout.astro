---
import type { Props as AuthLayoutProps } from './BaseLayout.astro'
import AuthLayout from './AuthLayout.astro'
import Header from '@/components/layouts/Header.astro'
import Footer from '@/components/layouts/Footer.astro'
import Content from '@/components/layouts/Content.astro'

interface Props extends AuthLayoutProps {
  paddingX?: number
  paddingY?: number
  spaceX?: number
  spaceY?: number
}

const { paddingX, paddingY, spaceX, spaceY } = Astro.props
---

<AuthLayout {...Astro.props}>
  <main>
    <Header />
    <Content
      paddingX={paddingX}
      paddingY={paddingY}
      spaceX={spaceX}
      spaceY={spaceY}
    >
      <slot />
    </Content>
    <Footer />
  </main>
</AuthLayout>
